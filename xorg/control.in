#! @SHELL@ -e

# Make sure that the environment is deterministic.
export PATH=@defaultPath@

if test "$1" = "start"; then

    mkdir -p @logDir@
    mkdir -p @stateDir@

    @xorgserver@/bin/Xorg -config @out@/conf/xorg.conf -logfile @logDir@/Xorg.log :1 vt8 -fp /usr/X11R6/lib/X11/fonts/misc &

else
    echo "unknown action $1"
    exit 1
fi