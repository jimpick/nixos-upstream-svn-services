#! @shell@ -e

# Make sure that the environment is deterministic.
export PATH=@coreutils@/bin

if test "$1" = "start"; then
    env - HOME=/homeless-shelter $extraEnv \
        @gw6c@/bin/gw6c -f @out@/conf/gw6c.conf
    if test -f /etc/event.d/httpd; then
	    @upstart@/sbin/stop httpd;
	    @upstart@/sbin/start httpd;
    fi;
fi

if test "$1" = "stop"; then
	env - HOME=/homeless-shelter @procps@/bin/pkill gw6c;
fi;
