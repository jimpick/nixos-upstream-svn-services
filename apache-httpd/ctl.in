#! @SHELL@ -e

# Make sure that the environment is deterministic.
export PATH=@defaultPath@

if test "$2" = "start"; then

    # Create necessary directories.
    mkdir -p @logDir@
    mkdir -p @stateDir@

    # Run initialisation for subservices.
    for i in @subServices@; do
        fn=$i/types/apache-httpd/startup-hook.sh
        if test -f "$fn"; then
            echo "running $fn..."
            source $fn
        fi
    done

fi

if test "@enableSSL@" = "1"; then
    sslFlag="-DSSL"
fi

# Start the server.
env - PATH=$PATH \
 @apacheHttpd@/bin/apachectl -f @out@/conf/httpd.conf $sslFlag $*
